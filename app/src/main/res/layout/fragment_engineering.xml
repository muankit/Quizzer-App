<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingTop="10dp"
    tools:context=".EngineeringFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/chemistryEngineeringButton"
                android:layout_width="90dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/engg_chem_background" />

            <Button
                android:id="@+id/physicsEngineeringButton"
                android:layout_width="90dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/engg_phy_background" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/enggChemTextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="Chemistry"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enggPhyTextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="Physics"
                android:textSize="18sp" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/mathematicsEngineeringbutton"
                android:layout_width="90dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/engg_math_background" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/enggMathTextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="Mathematics"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

</FrameLayout>