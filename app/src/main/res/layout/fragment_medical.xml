<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalFragment"
    android:background="@color/colorPrimary">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow>

            <Button
                android:id="@+id/chemistryMedicalButton"
                android:layout_width="90dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/chemistry" />

            <Button
                android:id="@+id/physicsMedicalButton"
                android:layout_width="90dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/physics" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="Chemistry"
                android:textSize="18sp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="Physics"
                android:textSize="18sp" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/biologyMedicalButton"
                android:layout_width="90dp"
                android:layout_height="175dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/biology" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:text="Biology"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>


</FrameLayout>